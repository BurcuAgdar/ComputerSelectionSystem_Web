@model IEnumerable<RAMViewModel>
@using ComputerSelection.Models

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Rams</div>
    <div class="panel-body">
        <div class="btn-group">
            <a onclick="location.href='@Url.Action("AddRAM", "RAM")'" id="createEditUserModal" data-toggle="modal" asp-controller="RAM" asp-action="AddRAM" data-target="#modal-action-user" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i> Add RAM
            </a>
        </div>
        <div class="top-buffer"></div>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Model</th>
                    <th>Usage Type</th>
                    <th>Memory Types</th>
                    <th>Memory Capacity</th>
                    <th>Memory Speed</th>
                    <th>Delay Time</th>
                    <th>Kit Type</th>
                    <th>Edit & Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Model)</td>
        <td>@Html.DisplayFor(modelItem => item.Usage_Type)</td>
        <td>@Html.DisplayFor(modelItem => item.Memory_Types)</td>
        <td>@Html.DisplayFor(modelItem => item.Memory_Capacity)</td>
        <td>@Html.DisplayFor(modelItem => item.Memory_Speed)</td>
        <td>@Html.DisplayFor(modelItem => item.Delay_Time)</td>
        <td>@Html.DisplayFor(modelItem => item.Kit_Type)</td>
        <td>

            <div class="btn-group">
                <a onclick="location.href='@Url.Action("EditRAM", "RAM", new { id = item.Model })'" id="createEditUserModal" data-toggle="modal" asp-controller="RAM" asp-action="EditRAM" data-target="#modal-action-user" class="btn btn-primary">
                    Edit
                </a>
            </div>

            <div class="btn-group">
                <a onclick="location.href='@Url.Action("DeleteRAM", "RAM", new { id = item.Model })'" id="createEditUserModal" data-toggle="modal" asp-controller="RAM" asp-action="DeleteRAM" data-target="#modal-action-user" class="btn btn-primary">
                    Delete
                </a>
            </div>

        </td>
    </tr>}
            </tbody>
        </table>
    </div>
</div>

@section scripts
{
    <script src="~/js/user-index.js" asp-append-version="true"></script>
}