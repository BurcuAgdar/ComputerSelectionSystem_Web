@model IEnumerable<SystemRequirementViewModel>
@using ComputerSelection.Models

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">System Requirements</div>
    <div class="panel-body">
        <div class="btn-group">
            <a onclick="location.href='@Url.Action("AddSystemRequirement", "SystemRequirement")'" id="createEditUserModal" data-toggle="modal" asp-controller="SystemRequirement" asp-action="AddSystemRequirement" data-target="#modal-action-user" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i> Add System Requirements
            </a>
        </div>
        <div class="top-buffer"></div>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Model</th>
                    <th>Amd</th>
                    <th>Intel</th>
                    <th>Ram</th>
                    <th>GPU 1</th>
                    <th>GPU 2</th>
                    <th>Free Disk Space</th>
                    <th>Edit & Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Model)</td>
                    <td>@Html.DisplayFor(modelItem => item.AMD)</td>
                    <td>@Html.DisplayFor(modelItem => item.Intel)</td>
                    <td>@Html.DisplayFor(modelItem => item.Ram)</td>
                    <td>@Html.DisplayFor(modelItem => item.VideoCard1)</td>
                    <td>@Html.DisplayFor(modelItem => item.VideoCard2)</td>
                    <td>@Html.DisplayFor(modelItem => item.FreeDiskSpace)</td>
                    <td>
                        <div class="btn-group">
                            <a onclick="location.href='@Url.Action("EditSystemRequirement", "SystemRequirement", new { id = item.Model })'" id="createEditUserModal" data-toggle="modal" asp-controller="SystemRequirement" asp-action="EditSystemRequirement" data-target="#modal-action-user" class="btn btn-primary">
                                Edit
                            </a>
                        </div>

                        <div class="btn-group">
                            <a onclick="location.href='@Url.Action("DeleteSystemRequirement", "SystemRequirement", new { id = item.Model })'" id="createEditUserModal" data-toggle="modal" asp-controller="SystemRequirement" asp-action="DeleteSystemRequirement" data-target="#modal-action-user" class="btn btn-primary">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>}
            </tbody>
        </table>
    </div>
</div>

@section scripts
{
    <script src="~/js/user-index.js" asp-append-version="true"></script>
}