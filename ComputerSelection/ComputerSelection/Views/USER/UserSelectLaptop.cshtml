                    width: 35%;
                }
        </style>

        <br /> <br /> <br /> <br />
        <script>var counter = 0;
            function Count() {
                counter = counter + 1;
            }
        </script>
        <div class="row">
           
            <h2>Computer Lists</h2>
            <input class="mySearch" type="text" id="mySearchComputer" onkeyup="Computer()" placeholder="Search Computer"
                   title="Type in a category">
            <div class="col-2">

                <table id="MyComputerTable" class="table">
                    <thead>
                        <tr>
                           
                            <th>Model</th>
                            <th>Display Card</th>
                            <th>Processor Type</th>
                            <th>Ram</th>
                            <th>Processor Generation</th>
                            <th>Processor Model</th>
                            <th>OS</th>
                            <th>Resulation</th>
                            <th>Screen Size</th>
                            <th>SSD Capacity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int count = 0;
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Model)</td>
                                <td>@Html.DisplayFor(modelItem => item.DisplayCard)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProcessorType)</td>
                                <td>@Html.DisplayFor(modelItem => item.Ram)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProcessorGeneration)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProcessorModel)</td>
                                <td>@Html.DisplayFor(modelItem => item.OS)</td>
                                <td>@Html.DisplayFor(modelItem => item.Resulation)</td>
                                <td>@Html.DisplayFor(modelItem => item.ScreenSize)</td>
                                <td>@Html.DisplayFor(modelItem => item.SSD_Capacity)</td>

                            </tr>
                            count++;
                        }
                            
                            }
                    </tbody>
                </table>
                <h2>We find @count result  </h2>
            </div>
        </div>

    </div>




    <script>
        /*   <td><input type="checkbox" id="selectCPU" name="select" value=pe" onclick="eb()"></td>*/




        function Computer() {
            // Declare variables
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("mySearchComputer");
            filter = input.value.toUpperCase();
            table = document.getElementById("MyComputerTable");
            tr = table.getElementsByTagName("tr");

            // Loop through all table rows, and hide those who don't match the search query
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[0];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }


    </script>


